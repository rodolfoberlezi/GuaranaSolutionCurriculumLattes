<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<guarana-config>

    <threads>1</threads>

    <logging>
	    <file>guarana.log</file>
	    <append>false</append>
	    <suppress-console-output>true</suppress-console-output>
	    <level>all</level>
	    <output-format>simple</output-format>
	    <subsystem>guarana</subsystem>
    </logging>

    <monitoring>

        <work-queue enabled="true">        
            <file>./cafe-full-stats/work-queue-stats - [1] [10] [1000].txt</file>
            <interval>2000</interval>
        </work-queue>

        <workers enabled="true">        
            <file>./cafe-full-stats/workers-stats - [1] [10] [1000].txt</file>
            <interval>2000</interval>
        </workers>

        <memory enabled="true">        
            <file>./cafe-full-stats/memory-stats - [1] [10] [1000].txt</file>
            <interval>2000</interval>
        </memory>

    </monitoring>

</guarana-config>
